{# set meta keywords #}
{% if metaKeywords %}
    {% set keywords = headerMeta.siteMetaKeywords + ',' + metaKeywords %}
{% else %}
    {% set keywords = headerMeta.siteMetaKeywords %}
{% endif %}

{# set meta description #}
{% if metaDescription %}
    {% set description = metaDescription %}
{% else %}
    {% set description = headerMeta.description %}
{% endif %}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="{{ description }}"/>
<meta name="keywords" content="{{ keywords }}"/>
<title>Eleventy + Netlify CMS Blog Example</title>