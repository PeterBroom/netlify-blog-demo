<nav>
    {% set footerNav = footerNav.topLevelItems %}
    <ul>
        {% for item in footerNav %}
            <li>
                {% if item.itemType == 'Link' %}
                    <a href="{{ item.url | url }}"{% if item.url == page.url %} data-current="current item"{% endif %}>{{ item.displayText }}</a>
                {% else %}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>